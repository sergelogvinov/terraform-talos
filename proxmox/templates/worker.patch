version: v1alpha1
machine:
  kubelet:
    extraConfig:
      serverTLSBootstrap: true
  network:
    kubespan:
      filters:
        endpoints:
          - 0.0.0.0/0
          - ::/0
          - '!172.16.0.0/12'
          - '!fd00::/8'
  sysctls:
    net.core.somaxconn: 65535
    net.core.netdev_max_backlog: 4096
  features:
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: false
